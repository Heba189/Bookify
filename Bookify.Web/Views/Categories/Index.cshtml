                </svg>
                Add
            </a>
        </div>
    </div>
    <div class="card-body">
        <div data-scroll="true" data-height="200">
            @if (!Model.Any())
            {
                <div class="alert alert-custom alert-light-warning fade show mb-5" role="alert">
                    <div class="alert-icon">
                        <i class="flaticon-warning"></i>
                    </div>
                    <div class="alert-text">A simple warning alert—check it out!</div>
                    <div class="alert-close">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">
                                <i class="ki ki-close"></i>
                            </span>
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-row-dashed table-row-gray-300 gy-7">
                        <thead>
                            <tr class="fw-bold fs-6 text-gray-800">
                                <th scope="col">Name</th>
                                <th scope="col">Status</th>
                                <th scope="col">Created On</th>
                                <th scope="col">Last Updated On</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@category.Name</td>
                                    <td>
                                        <span class="label label-light-@(category.IsDeleted ? "danger":"success") font-weight-bold label-inline mr-1">
                                            @(category.IsDeleted ? "Deleted":"Available")
                                        </span>
                                    </td>
                                    <td>@category.CreatedOn</td>
                                    <td>@category.LastUpdatedOn</td>
                                    <td>
                                        <a asp-action="Edit" asp-controller="Categories" asp-route-id="@category.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="flaticon-edit"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

</div>